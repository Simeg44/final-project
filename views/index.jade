extends layout

block content
	.container
		.opening-quote
			.tlt-quote
				ul.texts
					li(data-in-effect="fadeIn" data-out-effect="fadeOut" data-out-shuffle="true") Good and evil are entertwined like a rope.
					li(data-out-effect="fadeOut" data-out-shuffle="true")
		.title-background.col-md-12.col-lg-10.col-lg-offset-1
			h1.title#light-title Pandoran
			h1.title-reverse#dark-title Pandoran
			#options.options
				.new-game.title-btn
					button.btn.btn-default#new-game-btn New Game
				.continue.title-btn
					button.btn.btn-default#continue-btn Continue
			#player-options.options
			#sides.sides 
				.good-side Decendents of Hope
				.good-info-box
					.good-info Stuff
				.evil-side Vigilantes of Humanity
				.evil-info-box
					.evil-info Forget perfection and utopia. You see the value in the human struggle. To you sadness and pain are a necessary evil, without which human's would never truly understand the fleeting beauty of life.
				.choose Choose Your Side 



block scripts
	script.
		var playerData = !{JSON.stringify(player)}
